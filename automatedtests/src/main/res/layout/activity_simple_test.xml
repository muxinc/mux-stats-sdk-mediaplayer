<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#000000">

  <LinearLayout
    android:id="@+id/activity_simple_test_content_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:keepScreenOn="true"
    android:orientation="horizontal" >
    <SurfaceView
      android:id="@+id/activity_simple_test_content_surface_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_gravity="bottom">
    <ImageButton
      android:id="@+id/activity_simple_test_play_button"
      android:layout_gravity="center"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:background="#00000000"
      android:src="@drawable/exo_icon_play" />

    <ImageButton
      android:id="@+id/activity_simple_test_pause_button"
      android:layout_gravity="center"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:background="#00000000"
      android:src="@drawable/exo_icon_pause" />
  </LinearLayout>
</FrameLayout>
